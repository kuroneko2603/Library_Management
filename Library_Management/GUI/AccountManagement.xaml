                        <ListViewItem  Background="WhiteSmoke" Height="25" Margin="0,1,0,0" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock  Width="40" Margin="5,0,5,0" Padding="0" FontSize="12" Foreground="DimGray" Text="015" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBlock  Width="170" Margin="5,0,5,0" Padding="0" FontSize="15" Foreground="DimGray" Text="Levy McGarden"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem  Background="WhiteSmoke" Height="25" Margin="0,1,0,0" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock  Width="40" Margin="5,0,5,0" Padding="0" FontSize="12" Foreground="DimGray" Text="016" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBlock  Width="170" Margin="5,0,5,0" Padding="0" FontSize="15" Foreground="DimGray" Text="Warrod Sequen"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem  Background="WhiteSmoke" Height="25" Margin="0,1,0,0" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock  Width="40" Margin="5,0,5,0" Padding="0" FontSize="12" Foreground="DimGray" Text="017" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
