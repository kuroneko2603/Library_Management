                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Reader_ID" Width="40" Margin="5,0,5,0" Padding="0" FontSize="12" Foreground="DimGray" Text="001" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
